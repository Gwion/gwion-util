util_dir := $(dir $(abspath $(lastword $(MAKEFILE_LIST))))
CC ?=gcc
PREFIX ?=/usr/local

CFLAGS += -std=c99 -Iinclude -O2
# -fstrict-aliasing -mfpmath=sse
CFLAGS += -Wall -Wextra
#CFLAGS += -mtune=native

USE_DOUBLE    = 0
USE_COVERAGE ?= 0
USE_MEMCHECK ?= 0
USE_LTO      ?= 0

ifeq (${USE_DOUBLE}, 1)
CFLAGS +=-DUSE_DOUBLE -DSPFLOAT=double
else
CFLAGS+=-DSPFLOAT=float
endif

ifeq (${USE_COVERAGE}, 1)
CFLAGS += -ftest-coverage -fprofile-arcs
LDFLAGS += --coverage
endif

ifeq (${USE_MEMCHECK}, 1)
CFLAGS += -g -Og
else
CFLAGS += -DNDEBUG
endif

ifeq (${USE_LTO}, 1)
CFLAGS += -flto
LDFLAGS += -flto
endif

ifeq ($(shell uname), Darwin)
AR = "/usr/local/bin/libtool"
AR_OPT = "-static -o"
else
AR = "ar"
AR_OPT = "rcs"
endif
